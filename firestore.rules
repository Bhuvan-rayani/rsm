rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /forumPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.author == request.auth.token.email;
      allow update: if request.auth != null && resource.data.author == request.auth.token.email;
      allow delete: if request.auth != null && resource.data.author == request.auth.token.email;
      
      // Allow replies to posts
      match /replies/{replyId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && resource.data.author == request.auth.token.email;
        allow delete: if request.auth != null && resource.data.author == request.auth.token.email;
      }
    }
    
    // Allow authenticated users to create quiz attempts
    match /quizAttempts/{attemptId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.email.endsWith('@mit.edu'));
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
